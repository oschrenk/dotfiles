[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
[color "branch"]
    current = red
    local = green
    remote = yellow
[user]
	name = Oliver Schrenk
	email = oliver.schrenk@gmail.com
[core]
	excludesfile = ~/.global-gitignore
[alias]
	a = add
	aa = add -A
	ai = add -i
	au = add -u
	b = branch
	bd = branch -d
	c = commit
	cam = commit --amend
    cv = commit -v
    cva = commit -v -a
	co = checkout
	cob = checkout -b
	d = diff
	dt = difftool
	ff = flow feature finish
	forget = update-index --assume-unchanged
	fs = flow feature start
	hf = flow hotfix finish
	history = log --reverse --format="%ai: %s"
	hs = flow hotfix start
	p = push
	pod = push origin develop
	pog = push origin gh-pages
	pom = push origin master
	pop = stash pop
	pov = push origin vendor
	pum = pull origin master
	put = push --tags
	rf = flow release finish
	rs = flow release start
	s = status
	undo = checkout HEAD
	up = pull --rebase
	
[difftool "Kaleidoscope"]	
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope

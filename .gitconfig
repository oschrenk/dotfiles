[color]
	ui = auto
[user]
	name = Oliver Schrenk
	email = oliver.schrenk@gmail.com
[core]
	excludesfile = ~/.global-gitignore
[alias]
	a = add
	b = branch
	c = commit
	cam = commit --amend
    cv = commit -v
    cva = commit -v -a
	co = checkout
	d = diff
	dt = difftool
	forget = update-index --assume-unchanged
	history = !git log --reverse --pretty=oneline | cut -c41- | nl | sort -nr
	ignore = !echo $1 >> .gitignore
	s = status
	
[difftool "Kaleidoscope"]	
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope

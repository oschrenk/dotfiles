{
  "session_name": "devops",
  "windows": [
    {
      "window_name": "desk",
      "layout": "even-horizontal",
      "options": { "automatic-rename": "off" },
      "start_directory": "$HOME/Documents/notes",
      "panes": [
        { "start_directory": "$HOME/Documents/notes" },
        { "start_directory": "$HOME/Documents/logs", "focus": "true" }
      ]
    },
    {
      "window_name": "code",
      "layout": "main-horizontal",
      "options": { "automatic-rename": "off" },
      "start_directory": "$HOME/.deja/dotfiles",
      "panes": [
        { "start_directory": "$HOME/.deja/dotfiles",
          "shell_command": "vim ." ,
          "focus": "true"
        },
        { "start_directory": "$HOME/Projects/devops/machines" },
        { "start_directory": "$HOME/.ssh" }
      ]
    }
  ]
}

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.comodoro.server</string>
    <key>EnvironmentVariables</key>
    <dict>
      <key>HOME</key>
      <string>/Users/oliver</string>
    </dict>
    <key>ProgramArguments</key>
    <array>
      <string>/bin/sh</string>
      <string>-c</string>
      <string>rm -f /tmp/comodoro.sock; exec /Users/oliver/.local/share/cargo/bin/comodoro -c /Users/oliver/.config/comodoro/config.toml server start</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>/Users/oliver/.local/state/comodoro/server.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/oliver/.local/state/comodoro/server.log</string>
  </dict>
</plist>
